<% provide(:title, custom_title('Bookings')) %>
<div class="container">

<% if admin? %>
  <h1>Bookings</h1>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Time Slot</th>
        <th>Seat Number</th>
        <th>Movie Name</th>
        <th>Cinema</th>
        <th>Created At</th>
      </tr>
    </thead>
    <tbody>
      <% @book.each do |book| %>
        <tr>
          <td><%= book.user.full_name.titleize %></td>
          <td><%= book.user.email %>
          <td><%= book.time_slot %></td>
          <td><%= book.seat_number %></td>
          <td><%= book.screening.movie.title.titleize %>
          <td><%= book.screening.cinema.name.titleize %></td>
          <td><%= book.created_at.to_formatted_s(:short) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<%= paginate @book %>
</div>